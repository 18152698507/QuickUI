<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <SurfaceView
        android:id="@+id/view_video_sv_surf_view"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:id="@+id/view_video_ll_start"
        android:layout_alignParentStart="true"
        android:layout_width="40dp"
        android:layout_height="match_parent">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/view_video_ll_top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:id="@+id/view_video_ll_end"
        android:layout_alignParentEnd="true"
        android:layout_width="40dp"
        android:layout_height="match_parent">

    </LinearLayout>

    <LinearLayout
        android:background="#33000000"
        android:elevation="99dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/view_video_ll_bottpm"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <ImageView
            android:id="@+id/view_video_iv_play_stop"
            android:padding="2dp"
            android:background="@drawable/video_play"
            android:layout_marginStart="10dp"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:progressDrawable="@drawable/bg_video_seek"
            android:id="@+id/video_view_sb_seek_bar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:splitTrack="false"
            android:thumbTint="#FFFFFF"
            android:layout_height="40dp"
            android:maxHeight="5dp"/>
        <TextView
            android:id="@+id/video_view_tv_current"
            android:textSize="12sp"
            android:padding="2dp"
            android:textColor="#ffffff"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <TextView
            android:textSize="12sp"
            android:padding="2dp"
            android:textColor="#ffffff"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/video_view_tv_duration"
            android:textSize="12sp"
            android:padding="2dp"
            android:textColor="#ffffff"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <ImageView
            android:background="@drawable/full_screen"
            android:layout_marginEnd="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>
</RelativeLayout>